---
import FeatureCard from './FeatureCard.astro';
import { t, type Lang } from '../../data/i18n';

interface Props { lang?: Lang; }
const { lang = 'en' } = Astro.props;
const s = t[lang];

const features = [
  { icon: '⊞', title: s.featureGrid, description: s.featureGridDesc },
  { icon: '⌘', title: s.featureSeamless, description: s.featureSeamlessDesc },
  { icon: '#', title: s.featureNumber, description: s.featureNumberDesc },
  { icon: '◎', title: s.featureCustom, description: s.featureCustomDesc },
  { icon: '⌨', title: s.featureInput, description: s.featureInputDesc },
  { icon: 'あ', title: s.featureBilingual, description: s.featureBilingualDesc },
];
---

<section id="features" class="py-24 md:py-32">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="fade-in text-3xl md:text-5xl font-bold mb-4">
        {s.featuresTitle1}<br />{s.featuresTitle2}
      </h2>
      <p class="fade-in text-text-secondary text-lg max-w-xl mx-auto">
        {s.featuresSub}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {features.map((feature) => (
        <FeatureCard
          icon={feature.icon}
          title={feature.title}
          description={feature.description}
        />
      ))}
    </div>
  </div>
</section>
