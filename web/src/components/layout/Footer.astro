---
import { t, type Lang } from '../../data/i18n';

interface Props { lang?: Lang; }
const { lang = 'en' } = Astro.props;
const s = t[lang];
const manualHref = lang === 'ja' ? '/ja/manual' : '/manual';
---

<footer class="border-t border-border py-12 mt-32">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-3">
        <img src="/app-icon.png" alt="GridSwitch" class="w-6 h-6 rounded-md" />
        <span class="text-sm text-text-secondary">GridSwitch</span>
      </div>

      <div class="flex items-center gap-8">
        <a href="#features" class="text-sm text-text-secondary hover:text-text-primary transition-colors">{s.features}</a>
        <a href="#download" class="text-sm text-text-secondary hover:text-text-primary transition-colors">{s.download}</a>
        <a href="/blog" class="text-sm text-text-secondary hover:text-text-primary transition-colors">{s.blog}</a>
        <a href={manualHref} class="text-sm text-text-secondary hover:text-text-primary transition-colors">{s.manual}</a>
        <a href="https://github.com" class="text-sm text-text-secondary hover:text-text-primary transition-colors">GitHub</a>
      </div>

      <p class="text-sm text-text-secondary">
        {s.footerMade}
      </p>
    </div>
  </div>
</footer>
