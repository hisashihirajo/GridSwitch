---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="fade-in group bg-bg-card hover:bg-bg-card-hover border border-border rounded-2xl p-6 md:p-8 transition-all duration-300 hover:border-accent/30">
  <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-accent/10 text-accent text-2xl mb-5 group-hover:bg-accent/20 transition-colors">
    {icon}
  </div>
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  <p class="text-text-secondary text-sm leading-relaxed">{description}</p>
</div>
